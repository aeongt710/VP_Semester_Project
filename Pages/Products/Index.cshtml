@page
@model sem1.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<link href="~/css/index.css" rel="stylesheet" />
<p>
    <a asp-page="Create">Create New</a>
</p>


<div class="w-index">
    <table class="ztable" style="width:1170px">
        @*<caption>Warehouse Index</caption>*@
        <thead>
            <tr>
                @*<th scope="col">@Html.DisplayNameFor(model => model.Product[0].Id)</th>*@
                <th scope="col">@Html.DisplayNameFor(model => model.Product[0].Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Product[0].Length)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Product[0].Width)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Product[0].Height)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Product[0].Vendor)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Product[0].Price)</th>
                <th scope="col">Volume</th>
                <th scope="col">Items</th>
                <th scope="col">Properties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Product)
            {
            <tr>
                @*<td data-label="Name">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
                <td data-label="Volume">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td data-label="Total Volume">
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td data-label="Percentage">
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @(item.Length*item.Width*item.Height)
                </td>
                <td data-label="Items">
                    <a asp-page="../Items/Index" asp-route-id="@item.Id" asp-route-taskof="RouteProductID"><img src="./img/item.png" alt=""></a>
                </td>
                <td data-label="Properties">
                    &nbsp;&nbsp;<a asp-page="./Edit" asp-route-id="@item.Id"><img src="./img/edit.png" alt=""></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id"><img src="./img/detail.png" alt=""></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id"><img src="./img/del.png" alt=""></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>