@page
@model sem1.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <div class="Newccenter-div">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Length)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Length)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Width)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Width)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Height)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Height)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-2">
                Product&nbsp;Vendor
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Vendor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
        </dl>
    </div>
    <h4>Item in Warehoues</h4>
    <hr />
    <div  style="padding-left:400px;">
        <dl class="row">
            <dt class="col-sm-2">
                Name&nbsp;(Volume)&nbsp;&nbsp;
            </dt>
            <dt class="col-sm-10">
                Item&nbsp;Count (Updated Volume)
            </dt>
            <dt class="col-sm-2">
                &nbsp;
            </dt>
            <dt class="col-sm-10">
            </dt>
            @{
                //int count = 0;
                foreach (var item in Model.Ware)
                {
                    <dd class="col-sm-2">
                        @item.Name (@item.Volume)
                    </dd>
                    <dd class="col-sm-10">
                        @{ int v = Model.Product.Length * Model.Product.Width * Model.Product.Height * Model.Items.Where(m => m.WarehouseId == item.Id).Count()+item.Volume;} 
                        @Model.Items.Where(m => m.WarehouseId == item.Id).Count() (@v)
                    </dd>

                }
            }


        </dl>

    </div>
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Delete" class="bty" /><br />
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
    <style>
        .bty:hover{
            color:red;
            font-weight:bold;
        }
        .Newccenter-div {
            padding-left: 430px;
            /*padding-right:100px;*/
        }

        .row {
            text-align: left;
        }

        .col-sm-10 {
            padding-left: 80px;
        }
    </style>
