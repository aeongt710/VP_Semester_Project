                <input asp-for="@Model.MaxVolume" />
                <input type="submit" asp-route-MinVolume="@Model.MinVolume" asp-route-MaxVolume="@Model.MaxVolume" asp-route-taskof="FileterWarehouseByVolume" class="btn-secondary" value="Search" />*@

        </form>
    </div>

 </div>







